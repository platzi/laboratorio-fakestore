{
	"name": "laboratorio-fakestore",
	"version": "1.0.0",
	"description": "FakeStore",
	"main": "index.js",
	"scripts": {
		"e2e": "npm run preview && cypress open",
		"dev": "cross-env TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack serve --config webpack.dev.ts --stats-error-details",
		"preview": "cross-env TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --config webpack.prod.ts && npx http-server ./build --gzip",
		"build": "cross-env TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --config webpack.prod.ts",
		"lint": "npx eslint ./**.{js,mjs,cjs,ts,mts}",
		"lint:fix": "npx eslint --fix ./**.{js,mjs,cjs,ts,mts}",
		"stylelint": "npx stylelint \"**/*.css\" --allow-empty-input",
		"stylelint:fix": "npx stylelint --fix \"**/*.css\" --allow-empty-input",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/platzi/laboratorio-fakestore.git"
	},
	"keywords": [],
	"author": "Oscar Barajas <oscar@platzi.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/platzi/laboratorio-fakestore/issues"
	},
	"homepage": "https://github.com/platzi/laboratorio-fakestore#readme",
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/preset-env": "^7.23.7",
		"@babel/preset-typescript": "^7.23.3",
		"@tsconfig/recommended": "^1.0.3",
		"@types/html-webpack-plugin": "^3.2.9",
		"@types/node": "^20.10.6",
		"@types/serviceworker": "^0.0.82",
		"@types/webpack": "^5.28.5",
		"@types/webpack-bundle-analyzer": "^4.6.3",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"babel-loader": "^9.1.3",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-check-file": "^2.6.2",
